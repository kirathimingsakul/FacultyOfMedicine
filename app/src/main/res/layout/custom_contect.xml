<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#beffffff"
    tools:showIn="@layout/fragment_connect"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        tools:context="com.example.kiratimingsakul.medicalscience.contect.MapsActivity" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/map"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:background="#5fffffff"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="30dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#5cffffff">

                <TextView
                    android:id="@+id/text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="ท่านสามารถติดต่อ คณะแพทยศาสตร์ มหาวิทยาลัยนเรศวร ได้ที่"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_title"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="5dp"
                    android:text="ที่อยู่ :"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/text_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_title"
                    android:layout_marginLeft="105dp"
                    android:layout_marginTop="7dp"
                    android:text="คณะแพทยศาสตร์ มหาวิทยาลัยนเรศวร"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/text_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_details"
                    android:layout_marginLeft="105dp"
                    android:layout_marginTop="7dp"
                    android:text="เลขที่ 99 หมู่ 9 ตำบล ท่าโพธิ์"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/text_address2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_address"
                    android:layout_marginLeft="105dp"
                    android:layout_marginTop="7dp"
                    android:text="อำเภอ เมืองพิษณุโลก จังหวัด พิษณุโลก"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/text_address3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_address2"
                    android:layout_marginLeft="105dp"
                    android:layout_marginTop="7dp"
                    android:text="6500"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/text_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_address3"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:text="โทรศัพท์ :"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/text_tel1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_address3"
                    android:layout_marginLeft="105dp"
                    android:layout_marginTop="7dp"
                    android:text="0 5596 5595 - 8"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/text_tel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_tel1"
                    android:layout_marginLeft="105dp"
                    android:layout_marginTop="5dp"
                    android:text="0 5596 5666"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/text_tel3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_tel2"
                    android:layout_marginLeft="105dp"
                    android:layout_marginTop="5dp"
                    android:text="0 5596 5777"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/text_tel_r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_tel3"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5dp"
                    android:text="โทรสาร :"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/text_tel_r1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_tel3"
                    android:layout_marginLeft="105dp"
                    android:layout_marginTop="7dp"
                    android:text="0 5596 7927"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/text_tel_r2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_tel_r1"
                    android:layout_marginLeft="105dp"
                    android:layout_marginTop="7dp"
                    android:text="0 5596 5005"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/text_web"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_tel_r2"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5dp"
                    android:text="เว็บไซต์ :"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/text_web1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_tel_r2"
                    android:layout_marginLeft="105dp"
                    android:layout_marginTop="5dp"
                    android:text="www.med.nu.ac.th"
                    android:layout_marginBottom="40dp"
                    android:textColor="#f12c72f2"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </ScrollView>

    </android.support.v7.widget.CardView>


</RelativeLayout>